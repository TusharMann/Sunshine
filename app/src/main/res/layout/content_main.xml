<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tushar.sunshine.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/fab2"
            android:layout_marginLeft="20dp"
            android:background="@drawable/oval_ripple"
            android:src="@drawable/fab_plus"
            android:elevation="6dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <com.facebook.login.widget.LoginButton
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:id="@+id/login_button_fb"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />



        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:elevation="4dp"
            android:background="#2a7b20"
            android:layout_marginTop="5dp"
            android:id="@+id/mainactivity_framelayout1"></FrameLayout>


        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:elevation="4dp"
            android:background="#e65954"
            android:layout_marginTop="20dp"
            android:id="@+id/mainactivity_framelayout2"></FrameLayout>

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:elevation="4dp"
            android:background="#52e2db"
            android:id="@+id/mainactivity_framelayout3"></FrameLayout>

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:elevation="4dp"
            android:background="#000000"
            android:layout_marginTop="5dp"
            android:id="@+id/mainactivity_framelayout4"></FrameLayout>


    </LinearLayout>


</ScrollView>